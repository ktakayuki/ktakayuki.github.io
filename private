<h3>外部読み込み実験1.5</h3>
<script type="text/javascript" src="./jquery.xdomainajax.js"></script>
 <script>
// 引っ張ってきたいサイトのURL
url = 'https://blogtter.herokuapp.com/';
$.get(url, function(data){
var content = $(data.responseText).filter('div.tweet2').text();
$("#text").text(content);
alert(content);
});
</script>

<div id="text"></div>

<h3>外部読み込み実験2</h3>
<div id="blogtweets"></div>
<script type=text/javascript>
$(function() {
$.ajax({
url: 'https://blogtter.herokuapp.com/',
type: 'GET',
success: function(data) {
content = $(data.responseText);
 $('#blogtweets').html(content);
 //alert(content.find('div'));
}
});
});
</script> 